fred = "Why do gorillas have big nostrils? Big fingers!!"
print(fred)

fred = 'What is pink and fluffy? Pink fluff!!'
print(fred)

fred = '''How do dinosaurs pay their bills?
With tyrannosaurus checks!'''
print(fred)

# three single quotes (''') allows you to combine double and single quotes in a string without causing errors.

single_quote_str = 'He said, "Aren\'t can\'t shouldn\'t wouldn\'t."'
double_quote_str = "He said, \"Aren't can't shouldn't wouldn't.\""
print(single_quote_str)
print(double_quote_str)

myscore = 1000
message = 'I scored %s points'
print(message % myscore)

joke_text = '%s: a device for finding furniture in the dark'
bodypart1 = 'Knee'
bodypart2 = 'Shin'
print(joke_text % bodypart1)
print(joke_text % bodypart2)

print(10 * 'a')

wizard_list = 'spider legs, toe of frog, eye of newt, bat wing, slug butter, snake dandruff'
print(wizard_list)

wizard_list = ['spider legs', 'toe of frog', 'eye of newt','bat wing', 'slug butter', 'snake dandruff']
print(wizard_list)
print(wizard_list[2])
wizard_list[2] = 'snail tongue'
print(wizard_list)
print(wizard_list[2:5])

some_numbers = [1, 2, 5, 10, 20]
print(some_numbers)
some_strings = ['Which', 'Witch', 'Is', 'Which']
print(some_strings)
numbers_and_strings = ['Why', 'was', 6, 'afraid', 'of', 7,'because', 7, 8, 9]
print(numbers_and_strings)

wizard_list.append('bear burp')
wizard_list.append('mandrake')
wizard_list.append('swamp gas')
print(wizard_list)

del wizard_list[0:7]
print(wizard_list)

list1 = [1, 2, 3, 4]
list2 = ['I', 'tripped', 'over', 'and', 'hit', 'the', 'floor']
print(list1 + list2)

list1 = [1, 2]
print(list1 * 3)

# A tuple is like a list that uses parentheses, as in this example:
fibs = (0, 1, 1, 2, 3)
print(fibs[2])

favorite_sports = {'Ralph Williams' : 'Football',
 'Michael Tippett' : 'Basketball',
 'Edward Elgar' : 'Baseball'}
print(favorite_sports['Ralph Williams'])
del favorite_sports['Edward Elgar']
print(favorite_sports)